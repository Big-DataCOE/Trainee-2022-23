1. #include<iostream>
   int main()
   {
      int n;
      cin>>n;
      if(n%2==0)
      {
        cout<<"YES";
      }
      else
      {
        cout<<"NO";
      }
      return 0;
    }


2. #include<iostream>
   #include<string.h>
   int main()
   { int n, i,len;
     char s[100];
     cin>>n;
   for(i=0;i<n;i++)
   { cin>>s[i];
     len=strlen(s);
     if(len>10)
     { cout<<s[0]<<len-2<<s[len-1];
     }
     else
     { cout<<s<<endl;
     }
     return 0;
   }  
  




